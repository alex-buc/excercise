<UserControl x:Class="FieldSimultation.Controls.UserLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
   <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5">
        <!-- Centered StackPanel -->
        <StackPanel>
            <!-- Username Field -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Username:" Width="75" VerticalAlignment="Center" />
                <TextBox x:Name="UsernameTextBox" Width="150" />
            </StackPanel>

            <!-- Password Field -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Password:" Width="75" VerticalAlignment="Center" />
                <PasswordBox x:Name="PasswordBox" Width="150" />
            </StackPanel>

            <!-- Submit Button -->
            <Button x:Name="SubmitButton" Content="Submit" Width="100" HorizontalAlignment="Center" Click="OnLoginButtonClick"/>
        </StackPanel>
    </Grid>
</UserControl>